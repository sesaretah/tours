<div id='settings-detail'>
<%= form_for(access_control, remote: true) do |f| %>
<div class="card-body">
  <h5><%= role.title%></h5>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_post_ads]" <% if access_control.ability_to_post_ads %>checked<%end%> value="1">
          <span class="custom-control-label"><%=t :ability_to_post_ads%></span>
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_post_blog]" <% if access_control.ability_to_post_blog %>checked<%end%> value="1">
          <span class="custom-control-label"><%=t :ability_to_post_blog%></span>
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_verify_ads]" <% if access_control.ability_to_verify_ads %>checked<%end%> value="1">
          <span class="custom-control-label"><%=t :ability_to_verify_ads%></span>
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_change_categories]" <% if access_control.ability_to_change_categories %>checked<%end%> value="1">
          <span class="custom-control-label"><%=t :ability_to_change_categories%></span>
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_change_faqs]" <% if access_control.ability_to_change_faqs %>checked<%end%> value="1">
          <span class="custom-control-label"><%=t :ability_to_change_faqs%></span>
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_change_roles]" <% if access_control.ability_to_change_roles %>checked<%end%> value="1">
          <span class="custom-control-label"><%=t :ability_to_change_roles%></span>
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" name="access_control[ability_to_assign_roles]" <% if access_control.ability_to_assign_roles %>checked<%end%> value="1">
          <span class="custom-control-label"><%=t :ability_to_assign_roles%></span>
        </label>
      </div>
    </div>
  </div>
  <%= f.hidden_field :role_id , value: role.id %>
  <div class="card-footer text-right">
    <button type="submit" class="btn btn-primary"><%=t :submit%></button>
  </div>
  </div>
  <% end %>
</div>
