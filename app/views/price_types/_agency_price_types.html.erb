<div id='settings-detail'>
  <div class="card-header">
    <%= form_tag '/price_types', remote: true, method: :post do%>
    <div class="row">
      <div class="col-md-10">
        <div class="form-group">
          <label class="form-label"><%=t :price_type_title%></label>
          <%= text_field_tag :title, nil , class: "form-control" %>
        </div>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary" style="margin-top:26px" data-disable="true"><%=t :submit%></button>
      </div>
    </div>
    <%end%>
  </div>
  <%= render partial: 'price_types/list'%>
</div>
