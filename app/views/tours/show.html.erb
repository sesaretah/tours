<div class='row'>
  <div class="col-lg-4 order-lg-1">
  </div>
  <div class="col-lg-8 order-lg-1">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"></h3>
        <div class="card-options">
          <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
        </div>
      </div>
      <div class="card-body">
        <div class='row'>
          <div class='col-md-12 col-lg-12'>
                        <div class="form-group">
              <%= label :tour, :start_date , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @tour.start_date %></div>
            </div>
                        <div class="form-group">
              <%= label :tour, :end_date , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @tour.end_date %></div>
            </div>
                        <div class="form-group">
              <%= label :tour, :price , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @tour.price %></div>
            </div>
                        <div class="form-group">
              <%= label :tour, :details , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @tour.details %></div>
            </div>
                        <div class="form-group">
              <%= label :tour, :tour_package_id , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @tour.tour_package_id %></div>
            </div>
                        <div class="form-group">
              <%= label :tour, :uuid , class: "form-label", style: 'color: #7795c1;'%>              <div class="form-control-plaintext"><%= @tour.uuid %></div>
            </div>
                      </div>
        </div>
      </div>
    </div>
  </div>
</div>
