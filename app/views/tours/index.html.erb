<div class="row row-cards">
  <div class="col-lg-3">
    <div class="row">
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
      <div class="col-md-6 col-lg-12">
        <div class="card">
          <div class="card-body">

          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card">
      <table class="table card-table table-vcenter">
        <tbody>
          <% @tours.each do |tour| %>
          <tr>
                        <td><%= tour.start_date %></td>
                        <td><%= tour.end_date %></td>
                        <td><%= tour.price %></td>
                        <td><%= tour.details %></td>
                        <td><%= tour.tour_package_id %></td>
                        <td><%= tour.uuid %></td>
                        <td><%= link_to t(:show), tour %></td>
            <td><%= link_to t(:edit), edit_tour_path(tour) %></td>
            <td><%= link_to t(:destroy), tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
