<div id='settings-detail'>
  <div class="card-header">
    <%= form_tag '/airlines', remote: true, method: :post do%>
    <div class="row">
      <div class="col-md-10">
        <div class="form-group">
          <%= text_field_tag :name, nil , class: "form-control", placeholder: t(:airline_name) %>
        </div>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary" data-disable="true"><%=t :submit%></button>
      </div>
    </div>
    <%end%>
  </div>
  <div class="card-body">
    <%= render partial: 'airlines/list'%>
  </div>
</div>
