<div id='roles-list'>
  <table class="table table-hover table-outline">
    <%for assignment in Assignment.all%>
    <tr>
      <td><%= assignment.user.profile.name rescue nil%></td>
      <td><%= assignment.role.title rescue nil%></td>
      <td>
        <%= link_to "/assignments/#{assignment.id}/destroy", remote: true, class: "icon" ,data: { confirm: t(:are_you_sure) } do %>
        <i class="fe fe-trash" style='vertical-align:-3px;'></i>
        <%end%>
      </td>
    </tr>
    <%end%>
  </table>
</div>
