<%= form_for(@agency, html: {class: 'card'}) do |f| %>
<div class="card-header">
  <h3 class="card-title"><%=t :agency_form %></h3>
</div>
<% if @agency.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@agency.errors.count, "error") %> prohibited this agency from being saved:</h2>

  <ul>
    <% @agency.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="card-body">
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name , class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :subdomain, class: "form-label" %>
        <%= f.text_field :subdomain , class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :tel, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text"><i class="fa fa-phone" aria-hidden="true"></i></span>
          </span>
          <%= f.text_field :tel, class: "form-control", placeholder: "", style: 'direction: ltr;' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :mobile, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text"><i class="fa fa-tablet" aria-hidden="true"></i></span>
          </span>
          <%= f.text_field :mobile, class: "form-control", placeholder: "", style: 'direction: ltr;' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :fax, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text"><i class="fa fa-fax" aria-hidden="true"></i></span>
          </span>
          <%= f.text_field :fax , class: "form-control", placeholder: "" , style: 'direction: ltr;'%>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :telegram_channel, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text"><i class="fab fa-telegram"></i></span>
          </span>
          <%= f.text_field :telegram_channel , class: "form-control", placeholder: "" , style: 'direction: ltr;'%>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :instagram_page, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text"><i class="fab fa-instagram"></i></span>
          </span>
          <%= f.text_field :instagram_page , class: "form-control", placeholder: "", style: 'direction: ltr;' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-prepend" id="basic-addon1">
            <span class="input-group-text">@</span>
          </span>
          <%= f.text_field :email , class: "form-control", placeholder: "", style: 'direction: ltr;' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_area :address , class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <%= f.label :about_us, class: "form-label" %>
        <%= f.text_area :about_us , class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="card-footer text-right">
    <button type="submit" class="btn btn-primary"><%=t :submit%></button>
  </div>
</div>
<% end %>
