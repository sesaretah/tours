<div class="card">
  <a href="/tour_packages/<%= tour_package.id%>"><img class="card-img-top" src="<%= tour_package.image('medium')%>" alt="<%= tour_package.title%>"></a>
  <div class="card-body d-flex flex-column">
    <h4><a href="#"><%= tour_package.title%></a></h4>
    <div class="text-muted"><%= truncate( tour_package.details, length: 70)%></div>
    <div class="d-flex align-items-center pt-5 mt-auto">
      <div class="ml-auto text-muted">
        <a href="javascript:void(0)" class="icon d-none d-md-inline-block ml-3"><i class="fe fe-heart mr-1"></i></a>
        <% if params[:controller] == 'home'%>
        <%= link_to "/tour_packages/change_rank/#{tour_package.id}?move=up" do%>
        <i class="fa fa-arrow-up"></i>
        <%end%>
        <%= link_to "/tour_packages/change_rank/#{tour_package.id}?move=down" do%>
        <i class="fa fa-arrow-down"></i>
        <%end%>
        <%end%>
      </div>

      <div>

        <small class="d-block text-muted"><%= tour_package.days%> <%=t :days%> <%=t :and%> <%= tour_package.nights%> <%=t :nights%></small>
      </div>

    </div>
  </div>
</div>

<% if params[:action] == 'show'%>
<div class="list-group list-group-transparent mb-4 text-center">
  <%= link_to @tour_package, class: "list-group-item list-group-item-action active small", style:'font-weight:normal;',  method: :delete, data: { confirm: 'Are you sure?' } do%>
  <i class="fe fe-trash" style="vertical-align:middle;"></i> <%=t :delete_this_package%>
  <%end%>
</div>
<div class="list-group list-group-transparent mb-4 text-center">
  <%= link_to "/tour_packages/#{@tour_package.id}/edit", class: "list-group-item list-group-item-action active small", style:'font-weight:normal;' do%>
  <i class="fe fe-edit" style="vertical-align:middle;"></i> <%=t :edit%>
  <%end%>
</div>
<%end%>
