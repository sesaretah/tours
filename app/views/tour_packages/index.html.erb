<div class="row row-cards row-deck">
  <% for tour_package in @tour_packages%>
  <div class="col-sm-4 col-xl-3">
    <div class="card">
      <a href="/tour_packages/<%= tour_package.id%>"><img class="card-img-top" src="<%= tour_package.image('medium')%>" alt="And this isn't my nose. This is a false one."></a>
      <div class="card-body d-flex flex-column">
        <h4><a href="#"><%= tour_package.title%></a></h4>
        <div class="text-muted"><%= truncate( tour_package.details, length: 70)%></div>
        <div class="d-flex align-items-center pt-5 mt-auto">
          <div class="ml-auto text-muted">
            <a href="javascript:void(0)" class="icon d-none d-md-inline-block ml-3"><i class="fe fe-heart mr-1"></i></a>
          </div>

          <div>

            <small class="d-block text-muted"><%= tour_package.days%> <%=t :days%> <%=t :and%> <%= tour_package.nights%> <%=t :nights%></small>
          </div>

        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>
