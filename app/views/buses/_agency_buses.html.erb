<div id='settings-detail'>
  <div class="card-header">
    <%= form_tag '/buses', remote: true, method: :post do%>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label class="form-label"><%=t :bus_name%></label>
          <%= text_field_tag :name, nil , class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label class="form-label"><%=t :number_of_seats%></label>
          <%= number_field_tag :capacity, nil , class: "form-control" %>
        </div>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary" style="margin-top:26px" data-disable="true"><%=t :submit%></button>
      </div>
    </div>
    <%end%>
  </div>
  <%= render partial: 'buses/list'%>
</div>
